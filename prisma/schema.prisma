generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  queued
  active
  completed
  failed
  cancelled
  draft
}

model Job {
  id        String    @id
  template  String
  status    JobStatus
  resultUrl String?
  progress  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  options   Json?
}
