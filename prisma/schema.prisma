generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  queued
  active
  completed
  failed
  cancelled
}

model Job {
  id         String    @id
  template   String
  status     JobStatus
  resultUrl  String?
  progress   Int
  error      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  optionsKey String?
  fileKeys   String[]
}
