generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id         String   @id
  template   String
  status     String // queued|active|completed|failed|cancelled
  resultUrl  String?
  progress   Int
  error      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  optionsKey String?
  fileKeys   String[]
}
